<Window x:Class="Project_JA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_JA"
        mc:Ignorable="d"
        Title="MainWindow" Height="649" Width="1139">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="55*"/>
            <ColumnDefinition Width="220*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="White" BorderThickness="2" CornerRadius="25"></Border>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Grid.Column="0" Width="200">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button Background="BlueViolet" Margin="20 20 5 20" HorizontalAlignment="Stretch" IsEnabled="False" Height="50px" Name="runButton" Click="runButton_Click" Content="RUN"></Button>
                <Button Background="BlueViolet" Margin="20 20 5 20" HorizontalAlignment="Stretch" Height="50px"  x:Name="uploadButton" Click="uploadButton_Click" Content="UPLOAD"/>
                <Button Background="BlueViolet" Margin="20 20 5 20" HorizontalAlignment="Stretch" Height="50px"  x:Name="saveButton" Click="saveButton_Click" Content="SAVE"/>
            </StackPanel>
            <RadioButton VerticalAlignment="Center" HorizontalAlignment="Left" x:Name="buttonCsharp"/>
            <RadioButton VerticalAlignment="Center" HorizontalAlignment="Right" x:Name="buttonASM"/>
            <StackPanel VerticalAlignment="Center" Margin="35,0,0,0" Height="315">
                <Slider Margin="2,269,-2,10"  Name="amountOfThreads" Maximum="64" IsSnapToTickEnabled="True" TickFrequency="1"></Slider>
                <TextBox Text="{Binding ElementName=amountOfThreads, Path=Value, UpdateSourceTrigger=PropertyChanged}" Background="BlueViolet"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom">
                <TextBlock Height="50" Width="100" Text="Time:"></TextBlock>
                <TextBlock x:Name="timeText" Height="50" Width="100"></TextBlock>
            </StackPanel>
        </Grid>

        <WrapPanel x:Name="wp" HorizontalAlignment="Stretch" VerticalAlignment="Top" Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
            <Grid Width="{Binding Path=ActualWidth, ElementName=wp}">
                <WrapPanel>
                    
                </WrapPanel>
                <Image Name="imageBefore" Height="{Binding Path=ActualHeight, ElementName=wp}" Width="200" VerticalAlignment="Stretch" HorizontalAlignment="Center" Margin="20 20 540 20"></Image>
                <Image Name="imageAfter" Height="{Binding Path=ActualHeight, ElementName=wp}" Width="200" VerticalAlignment="Stretch"  HorizontalAlignment="Center" Margin="220 20 20 20"></Image>
            </Grid>
        </WrapPanel>
    </Grid>
</Window>
